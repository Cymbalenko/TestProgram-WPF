<Window x:Class="TestProgram.Views.FullScreenImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestProgram.Views"
        mc:Ignorable="d"
        Title="FullScreenImage" WindowState="Maximized" Height="800" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"  x:Name="tbImage"   Stretch="Uniform"  Source="{Binding SelectedBitmap}"/>
        <Button Grid.Row="1"  x:Name="BExit" Click="BExit_Click" Content="Close" FontSize="24" Margin="150,10,150,10"/>
    </Grid>
</Window>
